{%- capture variable -%}{%- endcapture -%}
{{ 'quote.css' | asset_url | stylesheet_tag }}
<div class="testimonials" style="padding: 30px 0;">
<div class="page-width" data-section-id="{{ section.id }}" data-section-type="quotes">
  {% if section.settings.title != blank %}
    <div class="section-header text-center">
      <h2 class="title {{ section.settings.heading_size }}" style="color: {{ section.settings.heading_color }};">{{ section.settings.title | escape }}</h2>
    </div>
  {% endif %}

  {% if section.blocks.size > 0 %}
    <div class="quotes-wrapper" data-slider>
      <div class="quotes-slider-wrapper" data-slider-container>
        <div class="quotes-slider" id="Quotes-{{ section.id }}" data-count="{{ section.blocks.size }}" data-slider-track
          data-slickslider="true"
          data-slick-autoplay="{{ section.settings.autoplay }}"
          data-slick-autoplayspeed="{{ section.settings.autorotate_speed | times: 1000 }}"
          data-slick-infinite="{{ section.settings.sliderLoop }}"
          data-slick-pauseonhover="{{ section.settings.pauseOnHover }}"
        
          data-slick-desktop-init="{{ section.settings.desktopInit }}"
          data-slick-desktop-show="{{ section.settings.desktopShow }}"
          data-slick-desktop-arrows="{{ section.settings.desktopArrows }}"
          data-slick-desktop-dots="{{ section.settings.desktopDots }}"
          data-slick-desktop-vertical="false"
        
          data-slick-tab-init="{{ section.settings.tabInit }}"
          data-slick-tab-show="{{ section.settings.tabShow }}"
          data-slick-tab-arrows="{{ section.settings.tabArrows }}"
          data-slick-tab-dots="{{ section.settings.tabDots }}"
          data-slick-tab-vertical="false"
        
          data-slick-mobile-init="{{ section.settings.mobileInit }}"
          data-slick-mobile-show="{{ section.settings.mobileShow }}"
          data-slick-mobile-arrows="{{ section.settings.mobileArrows }}"
          data-slick-mobile-dots="{{ section.settings.mobileDots }}"
          data-slick-mobile-vertical="false"
        >
          {% for block in section.blocks %}
            <div id="slickSlide{{ block.id }}"
              class="quotes-slide quotes-slide--{{ block.id }}{% if section.blocks.size == 1 %} quotes-slide--single{% endif %}"
              aria-labelledby="slickDot{{ block.id }}"
              {{ block.shopify_attributes }}
              data-slider-slide-index="{{ forloop.index0 }}"
              data-slider-item>

              <blockquote class="quotes-slider__text text-center">
                <p class="quote-heading" style="color: {{ section.settings.title_color }};">{{ block.settings.quote_heading }}</p>
                {% assign review__star = block.settings.review_star %}
                <ul>
                  {% if review__star == 1 or review__star == 2 or review__star == 3 or review__star == 4 or review__star == 5 %}
                  <li>{% include 'icon-star' %}</li>
                  {% endif %}
                  {% if review__star == 2 or review__star == 3 or review__star == 4 or review__star == 5 %}
                  <li>{% include 'icon-star' %}</li>
                  {% endif %}
                  {% if review__star == 3 or review__star == 4 or review__star == 5 %}
                  <li>{% include 'icon-star' %}</li>
                  {% endif %}
                  {% if review__star == 4 or review__star == 5 %}
                  <li>{% include 'icon-star' %}</li>
                  {% endif %}
                  {% if review__star == 5 %}
                  <li>{% include 'icon-star' %}</li>
                  {% endif %}

                </ul>
                {% if block.settings.quote != blank %}
                  <div class="rte-setting rte" style="color: {{ section.settings.description_color }};">{{ block.settings.quote }}</div>
                {% endif %}
                {% if block.settings.author != blank %}
                  <cite style="color: {{ section.settings.author_color }};">- {{ block.settings.author | escape }}</cite>
                {% endif %}
                
              </blockquote>
            </div>
          {% endfor %}
        </div>
      </div>
    </div>
  {% endif %}

</div>
</div>
<style>
  #shopify-section-{{ section.id }}{
    background-color: {{ section.settings.color_background }}; 
  }
</style>
{% comment %} <script>
