{{ 'logo-list.css' | asset_url | stylesheet_tag }}
<div class=" relative container multi_logo container--no-mobile-padding section-{{ section.id }}" data-section-id="{{ section.id }}" data-section-type="logo-list">
  {% style %} 
    .section-{{ section.id }} .logo-list-section { background-color: {{ section.settings.color_bg }}; }
    .section-{{ section.id }} .logo-list__logo { color: {{ section.settings.color_text }}; } 
    .section-{{ section.id }} .logo-list__title { color: {{ section.settings.color_title }}; }
    .section-{{ section.id }} .logo-list__link .logo-list__logo-image { opacity: {{ section.settings.image_opacity }}%; }
    .section-{{ section.id }} .logo-list__link:hover .logo-list__logo-image { opacity: 100%; } 
    {%- for block in section.blocks -%} 
    .section-{{ section.id }} .logo-list__logo-{{ forloop.index }} .logo-list__logo-image { max-width: {{ block.settings.image_width }}px; }
    {%- endfor -%} 
    {% endstyle %} 
  <div class="page-width large-section logo-list-section global-border-radius large-row ">
    {%- if section.settings.title != blank or section.settings.enable_carousel == true -%} 
      <div class="logo-list__title text-center"> 
        {% if section.settings.title != blank %} 
        <h2 class="{% if section.settings.enlarge_title %}giant-title{% else %}large-title{% endif%}">{{ section.settings.title | escape }}</h2>
        {% endif %} 
      </div>
    {% endif %} 
    <div class="logo-list"> 
    {% for block in section.blocks %} 
      {%- if block.settings.link != blank -%}
        <a class="logo-list__logo logo-list__logo-{{ forloop.index }} logo-list__link" href="{{ block.settings.link }}" {{ block.shopify_attributes }}>
          {%- else -%}
        <div class="logo-list__logo logo-list__logo-{{ forloop.index }}" {{ block.shopify_attributes }}> 
        {%- endif -%}
          <div class="logo-list__logo-image GM-logo-list__logo-image"> 
          {%- if block.settings.image != blank -%} 
            <div class="rimage-outer-wrapper" style="max-width: {{ block.settings.image.width }}px">
              <div class="rimage-wrapper lazyload--placeholder">
                {%- assign img_url = block.settings.image | img_url: 'master' -%}
                <img class="rimage__image lazyload fade-in" src="{{ img_url }}" data-widths="[{{ block.settings.image_width }}, {{ block.settings.image_width | times: 2}}]" data-aspectratio="{{ block.settings.image.aspect_ratio }}" data-sizes="auto" alt="{{ block.settings.image.alt | escape }}">
              </div> 
            </div>
            {%- else -%}
            <div class="placeholder-image"> 
            {{- 'logo' | placeholder_svg_tag: 'placeholder-svg' -}}
            </div> 
            {%- endif -%} 
          </div> 
          {%- if block.settings.Logo_list_heading != blank -%} 
            {{block.settings.Logo_list_heading }}
            {%endif%} 
            {%- if block.settings.title != blank -%} 
          <div class="logo-list__logo-text {% if section.settings.enlarge_text %} large-text{% endif %}"> 
              {{ block.settings.title }}
              </div>
          {%- endif -%} 
          {%- unless block.settings.link != blank -%} 
        </div>
          {%- else -%}
            </a> 
            {%- endunless -%} 
            {% endfor %}
    </div>
    {% if section.settings.button_link != blank %}
      <div class="rich-text-section__btn-row text-center">
        <a class="btn btn--small btn--primary" href="{{section.settings.button_link}}">{{section.settings.button_text}}</a> 
      </div>
      {% endif %} 
  </div> 
</div>
{% schema %}
{
  "name": "Logo list",
  "tag": "section",
  "class": "section-logo-list",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Logo list"
    },
    {
      "type": "color",
      "id": "color_bg",
      "label": "Background color",
      "default": "#dae4e6"
    }
  ],
  "blocks": [
    {
      "type": "logo",
      "name": "Logo",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "range",
          "id": "image_width",
          "label": "Logo width",
          "min": 40,
          "max": 280,
          "step": 10,
          "unit": "px",
          "default": 160
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Text",
          "info": "Optional"
        },
        {
          "type": "richtext",
          "id": "Logo_list_heading",
          "label": "Logo List Heading",
          "info": "Optional"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Logo list",
      "blocks": [
        {
          "type": "logo"
        },
        {
          "type": "logo"
        },
        {
          "type": "logo"
        }
      ]
    }
  ]
}  {% endschema %} 