{{ 'our-story-section.css' | asset_url | stylesheet_tag }}

<div class="page-width section-{{ section.id }}-padding isolate">
  <div class="our-story-section-container">
    <div class="our-story-section-inner">
      <div class="our-story-left">
        <div class="our-story-left-inner">
        {% if section.settings.heading != blank %}
          <h2 class="title {{ section.settings.heading_size }}" style="color: {{ section.settings.heading_color }};">{{ section.settings.heading }}</h2>
          {% endif %}
          {% if section.settings.description != blank %}
          <div style="color: {{ section.settings.subheading_color }};">{{ section.settings.description }}</div>
          {% endif %}
          {% if section.settings.link != blank %}
          <a href="{{ section.settings.link }}" class="our-story-btn">{{ section.settings.link_label }}</a>
          {% endif %}
        </div>
      </div>
      <div class="our-story-right">
        <div class="our-story-right-inner">
          {%- for block in section.blocks -%}
            {% if block.settings.image != blank %}
            <div class="our-story-block">
              {{ block.settings.image | image_url: width: 1420 | image_tag:
                      loading: 'lazy',
                      widths: '275, 550, 710, 1420',
                      class: 'multicolumn-card__image'
                    }}
              <p style="color: {{ block.settings.title_color }};">{{ block.settings.title | escape }}</p>
            </div>
          {% endif %}
          {%- endfor -%}
        </div>
      </div>
    </div>
  </div>

</div>




<style>
  #shopify-section-{{ section.id }}{
    background-color: {{ section.settings.color_background }}; 
  }
</style>

{% schema %}
  {
    "name": "Our Story",
    "settings": [
      {
        "type": "color",
        "id": "color_background",
        "label": "Section Background",
        "default": "#FFF"
    },
      {
      "type": "text",
      "id": "heading",
      "default": "Our Story",
      "label": "Heading"
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        {
          "value": "h2",
          "label": "t:sections.all.heading_size.options__1.label"
        },
        {
          "value": "h1",
          "label": "t:sections.all.heading_size.options__2.label"
        },
        {
          "value": "h0",
          "label": "t:sections.all.heading_size.options__3.label"
        }
      ],
      "default": "h1",
      "label": "t:sections.all.heading_size.label"
    },
    {
          "type": "color",
          "id": "heading_color",
          "label": "Heading color",
          "default": "#000"
      },
      {
      "type": "richtext",
      "id": "description",
      "label": "Description"
    },
    {
          "type": "color",
          "id": "subheading_color",
          "label": "Description color",
          "default": "#000"
      },
    {
      "type": "text",
      "id": "link_label",
      "label": "Link label"
    },
    {
      "type": "url",
      "id": "link",
      "label": "Link URL"
    }
    ],
  "blocks": [
    {
      "type": "column",
      "name": "Column",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "title",
          "default": "Column",
          "label": "Title"
        },
        {
              "type": "color",
              "id": "title_color",
              "label": "Title color",
              "default": "#000"
          }
      ]
    }
  ],
  "presets": [
    {
      "name": "Our Story",
      "blocks": [
        {
          "type": "column"
        },
        {
          "type": "column"
        },
        {
          "type": "column"
        }
      ]
    }
  ]
  }
{% endschema %}

