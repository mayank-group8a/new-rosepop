}
.product-title {
  text-align: center;
}
.product-title .product__title h1 {
    color: #DF9CAC;
    font-size: 28px;
    font-weight: 600;
}
ul.all_steps li {
    display: flex;
}
ul.all_steps p {
    font-size: 24px;
    font-weight: 600;
    color: rgb(var(--color-heading-1-text));
