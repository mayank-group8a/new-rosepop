/*Rount Frame*/
#customize_section_right .round { 
  padding: 25px; 
  border-radius: 100%; 
  overflow: hidden; 
  background: url({{ 'round-bg.png' | file_img_url: 'master' }}); 
  background-repeat: no-repeat; 
  background-size: 100% 100%; 
  width: 330px; 
  height: 330px; 
  margin: 20px auto; 
  position: relative; 
}
#customize_section_right .round img { 
  position: absolute; 
  left: 25px; 
  top: 25px; 
  object-fit: cover; 
  border-radius: 100%; 
  overflow: hidden; 
  width: calc(100% - 50px); 
}

/*Square Frame*/
#customize_section_right .square { 
  padding: 40px; 
  border-radius: 0; 
  overflow: hidden; 
  background: url({{ 'xoxo-BTmessage_frame.png' | file_img_url: 'master' }}); 
  background-repeat: no-repeat; 
  background-size: 100% 100%; 
  width: 330px !important; 
  height: 330px; 
  margin: 20px auto; 
  position: relative; 
  border: 0 !important; 
  color: #272727; 
}
#customize_section_right .square img { 
  position: absolute; 
  left: 30px; 
  top: 30px; 
  object-fit: cover; 
  border-radius: 0; 
  overflow: hidden; 
  width: calc(100% - 60px); 
}

/*Rectangle Frame*/
#customize_section_right .rectangle { 
  padding: 35px; 
  border-radius: 0; 
  overflow: hidden; 
  background: url({{ 'perfectdozen-BTmessage_frame_1.png' | file_img_url: 'master' }}); 
  background-repeat: no-repeat; 
  background-size: 100% 100%; 
  width: 445px !important; 
  height: 350px; 
  margin: 20px auto; 
  position: relative; 
  border: 0 !important; 
}
#customize_section_right .rectangle img { 
  position: absolute; 
  left: 30px; 
  top: 30px; 
  object-fit: scale-down; 
  border-radius: 0; 
  overflow: hidden; 
  width: calc(100% - 60px); 
  height: calc(100% - 60px); 
}

/*Wide Rectangle Frame*/
